{
  "name": "copilot-money-mcp",
  "version": "1.1.0",
  "description": "MCP server for Copilot Money - AI-powered personal finance queries using local data",
  "keywords": [
    "mcp",
    "copilot-money",
    "personal-finance",
    "leveldb",
    "firestore",
    "claude",
    "ai"
  ],
  "author": "Ignacio Hermosilla <ignacio@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ignaciohermosillacornejo/copilot-money-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ignaciohermosillacornejo/copilot-money-mcp/issues"
  },
  "homepage": "https://github.com/ignaciohermosillacornejo/copilot-money-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "copilot-money-mcp": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "PRIVACY.md"
  ],
  "scripts": {
    "dev": "bun run src/server.ts",
    "dev:debug": "bun --inspect run src/server.ts",
    "build": "bun build src/cli.ts --outdir dist --target node --format esm && chmod +x dist/cli.js",
    "build:bundle": "bun build src/server.ts --outdir dist --target node --format esm",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "check": "bun run typecheck && bun run lint && bun run format:check && bun run test",
    "fix": "bun run lint:fix && bun run format",
    "clean": "rm -rf dist coverage .bun-build",
    "pack:mcpb": "bun run build:bundle && bun run build && bunx @anthropic-ai/mcpb pack",
    "prepublishOnly": "bun run clean && bun run build && bun test",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.2.0",
    "classic-level": "^1.4.1",
    "protobufjs": "^7.2.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "latest",
    "@types/bun": "^1.1.0",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}
